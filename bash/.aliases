#!/usr/bin/env bash

# ------------easier navigation------------
alias ..="cd .."

# ------------ls file list------------
# add color, auto can avoid color to be save
alias ls="ls --color=auto"
# long list format, human readable size, classify type
alias ll="ls -lhF --color=auto"
# show all files including hidden files
alias la="ls -lhAF --color=auto"

# ------------git------------
alias gg="git log --graph --pretty=oneline --abbrev-commit --decorate"

# -----------grep-----------
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# ------------others------------
# Used to send desktop notifications when long-running commands complete.
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'